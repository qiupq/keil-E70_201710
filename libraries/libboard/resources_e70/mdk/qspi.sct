; *------------------------------------------------------------------------------
; *      Linker scatter for running in internal FLASH on the SAME70
; *----------------------------------------------------------------------------*/

; /* vector is put at very begin address of FLASH, the preserved size is 0x100 */

LR_IROM1 0x80000000 0x00200000  ; load region size_region
{
    Vector_region 0x80000000 +0; load address = execution address;
    {
        startup_sam.o (vectors, +First)
    }

    ROM +0
    {
        .ANY (+RO)
    }

    RW_IRAM1 0x20400000 0x0005D000 ; RW data
    {
        .ANY (+RW +ZI)
    }

 
   ; Configure Stack and Heap
    ARM_LIB_HEAP +0 ALIGN 8 EMPTY 0x1000
    {
    }

    ARM_LIB_STACK +0 EMPTY 0x2000
    {
    }

    
    ; Configure SDRAM region
    SDRAM 0x70000000 0x200000 
    {
        .ANY (sdram_region) 
    }
}

